<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/company_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/_5sdp"
    android:background="@drawable/rounded_rect"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:backgroundTint="@color/white"
    android:layout_marginTop="@dimen/_5sdp"
    >

    <ImageView
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/office_ic"
        app:layout_constraintRight_toLeftOf="@+id/guide3v"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.3"
        android:orientation="vertical"
        android:id="@+id/guide3v"/>

    <TextView
        android:id="@+id/companyNameLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/guide3v"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="@dimen/_10sdp"
        android:textColor="@android:color/holo_blue_dark"
        android:text="@string/txt_company_name"
        android:fontFamily="sans-serif-medium"
        android:textSize="@dimen/_11sdp"
        android:layout_marginLeft="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/companyNameValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/guide3v"
        app:layout_constraintTop_toBottomOf="@+id/companyNameLabel"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@android:color/holo_orange_dark"
        tools:text="Sample company name"
        android:fontFamily="sans-serif-medium"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_11sdp"/>

    <TextView
        android:id="@+id/locationNameLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/guide3v"
        app:layout_constraintTop_toBottomOf="@+id/companyNameValue"
        android:paddingTop="@dimen/_3sdp"
        android:textColor="@android:color/holo_blue_dark"
        android:text="@string/txt_location"
        android:fontFamily="sans-serif-medium"
        android:textSize="@dimen/_11sdp"
        android:layout_marginLeft="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/locationNameValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/guide3v"
        app:layout_constraintTop_toBottomOf="@+id/locationNameLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textColor="@android:color/holo_orange_dark"
        tools:text="Sample location "
        android:fontFamily="sans-serif-medium"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_11sdp"/>
</androidx.constraintlayout.widget.ConstraintLayout>